{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",

    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@config": ["./src/config/*"],
      "@common": ["./src/common/*"],
    },

    "strict": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
