{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",

    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "$config/*": ["src/config/*"],
      "$common/*": ["src/common/*"],

      "$api/v1.0/*": ["src/api/v1.0/*"],
      "$api/v1.0/users/*": ["src/api/v1.0/components/users/*"],
    },

    "strict": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
